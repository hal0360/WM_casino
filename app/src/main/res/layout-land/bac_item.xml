<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="545dp"
    android:layout_height="110dp"
    android:layout_marginBottom="10dp"
    tools:ignore="SpUsage,UnusedAttribute"
    android:background="@drawable/bac_gradiant">

    <ImageView
        android:id="@+id/dealer_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamster" />

    <TextView
        android:id="@+id/dealername_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Christina"
        android:textColor="#fff"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/dealer_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealer_img" />

    <TextView
        android:id="@+id/table_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:text="@string/baccarat"
        android:textColor="#fff"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/dealer_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gyu_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="@string/gyu_shu"
        android:textColor="#fff"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/dealer_img"
        app:layout_constraintTop_toBottomOf="@+id/table_name_txt" />

    <TextView
        android:id="@+id/bank_rate"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/red_ball"
        android:gravity="center"
        android:text="33"
        android:textColor="#fff"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dealer_img" />

    <TextView
        android:id="@+id/bank_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="33%"
        android:textColor="#FF0000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/bank_rate"
        app:layout_constraintStart_toStartOf="@+id/bank_rate"
        app:layout_constraintTop_toTopOf="@+id/bank_rate" />

    <ProgressBar
        android:id="@+id/bank_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="40dp"
        android:layout_height="13dp"
        android:layout_marginTop="11dp"
        android:indeterminate="true"
        android:indeterminateTint="#FF0000"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="@+id/bank_rate"
        app:layout_constraintStart_toStartOf="@+id/bank_rate"
        app:layout_constraintTop_toTopOf="@+id/bank_percent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:background="#6495ED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bank_rate"
        app:layout_constraintTop_toTopOf="@+id/bank_rate" />

    <TextView
        android:id="@+id/tie_rate"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/green_ball"
        android:gravity="center"
        android:text="23"
        android:textColor="#fff"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/bank_rate" />

    <TextView
        android:id="@+id/tie_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="33%"
        android:textColor="#008000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tie_rate"
        app:layout_constraintStart_toStartOf="@+id/tie_rate"
        app:layout_constraintTop_toTopOf="@+id/tie_rate" />

    <ProgressBar
        android:id="@+id/tie_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="40dp"
        android:layout_height="13dp"
        android:layout_marginTop="11dp"
        android:indeterminate="true"
        android:indeterminateTint="#008000"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="@+id/tie_rate"
        app:layout_constraintStart_toStartOf="@+id/tie_rate"
        app:layout_constraintTop_toTopOf="@+id/tie_percent" />

    <View
        android:id="@+id/view3"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:background="#6495ED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tie_rate"
        app:layout_constraintTop_toTopOf="@+id/tie_rate" />

    <TextView
        android:id="@+id/play_rate"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/blue_ball"
        android:gravity="center"
        android:text="52"
        android:textColor="#fff"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/tie_rate" />

    <TextView
        android:id="@+id/play_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="12%"
        android:textColor="#0000FF"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/play_rate"
        app:layout_constraintStart_toStartOf="@+id/play_rate"
        app:layout_constraintTop_toTopOf="@+id/play_rate" />

    <ProgressBar
        android:id="@+id/play_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="40dp"
        android:layout_height="13dp"
        android:layout_marginTop="11dp"
        android:indeterminate="true"
        android:indeterminateTint="#0000FF"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="@+id/play_rate"
        app:layout_constraintStart_toStartOf="@+id/play_rate"
        app:layout_constraintTop_toTopOf="@+id/play_percent" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/main_grid"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        app:layout_constraintStart_toEndOf="@+id/play_rate"
        app:layout_constraintTop_toTopOf="parent">

    </tw.com.lixin.wm_casino.tools.CasinoGrid>

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/second_grid"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        app:layout_constraintStart_toStartOf="@+id/main_grid"
        app:layout_constraintTop_toBottomOf="@+id/main_grid">

    </tw.com.lixin.wm_casino.tools.CasinoGrid>

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/third_grid"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:background="#fff"
        app:layout_constraintStart_toEndOf="@+id/second_grid"
        app:layout_constraintTop_toTopOf="@+id/second_grid">

    </tw.com.lixin.wm_casino.tools.CasinoGrid>

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/fourth_grid"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:background="#fff"
        app:layout_constraintStart_toEndOf="@+id/third_grid"
        app:layout_constraintTop_toTopOf="@+id/third_grid">

    </tw.com.lixin.wm_casino.tools.CasinoGrid>

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/first_grid"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="@+id/fourth_grid"
        app:layout_constraintStart_toEndOf="@+id/main_grid"
        app:layout_constraintTop_toTopOf="parent">

    </tw.com.lixin.wm_casino.tools.CasinoGrid>

    <TextView
        android:id="@+id/waiting_txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintEnd_toStartOf="@+id/main_grid"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/card_waiting" />

    <TextView
        android:id="@+id/dealing_txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintEnd_toStartOf="@+id/main_grid"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/card_dealing" />

    <TextView
        android:id="@+id/countdown_txt"
        android:background="@drawable/red_circle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:text="34"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toStartOf="@+id/main_grid"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</android.support.constraint.ConstraintLayout>