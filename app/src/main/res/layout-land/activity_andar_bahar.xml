<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="630dp"
    android:layout_height="338dp"
    android:layout_gravity="center"
    android:layout_marginBottom="2dp"
    android:background="@drawable/lobby_bg01"
    tools:context=".AndarBaharActivity">

    <tw.com.lixin.wm_casino.tools.CasinoArea
        android:id="@+id/casino_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/first_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <tw.com.lixin.wm_casino.tools.ChipStack
            android:id="@+id/Anda_stack"
            android:layout_width="184dp"
            android:layout_height="68dp"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="21dp"
            app:area="1"
            app:max_val="50000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安達"
                android:textColor="#0000FF"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:0.9"
                android:textColor="#fff"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </tw.com.lixin.wm_casino.tools.ChipStack>

        <tw.com.lixin.wm_casino.tools.ChipStack
            android:id="@+id/baha_stack"
            android:layout_width="184dp"
            android:layout_height="68dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="21dp"
            app:area="2"
            app:max_val="50000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巴哈"
                android:textColor="#FF0000"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1"
                android:textColor="#fff"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </tw.com.lixin.wm_casino.tools.ChipStack>

    </tw.com.lixin.wm_casino.tools.CasinoArea>

    <tw.com.lixin.wm_casino.tools.grids.TextGrid
        android:id="@+id/main_grid"
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:grid_x="15"
        app:grid_y="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <tw.com.lixin.wm_casino.tools.grids.CasinoGrid
        android:id="@+id/first_grid"
        android:layout_width="267dp"
        android:layout_height="0dp"
        android:layout_marginStart="0.5dp"
        app:grid_x="27"
        app:grid_y="6"
        app:layout_constraintBottom_toBottomOf="@+id/main_grid"
        app:layout_constraintStart_toEndOf="@+id/main_grid"
        app:layout_constraintTop_toTopOf="@+id/main_grid" />

    <tw.com.lixin.wm_casino.tools.grids.CasinoDoubleGrid
        android:id="@+id/second_grid"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="0.5dp"
        app:grid_x="22"
        app:grid_y="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/first_grid"
        app:layout_constraintTop_toTopOf="@+id/first_grid" />

    <tw.com.lixin.wm_casino.tools.grids.CasinoDoubleGrid
        android:id="@+id/third_grid"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginTop="0.5dp"
        app:grid_x="11"
        app:grid_y="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/second_grid"
        app:layout_constraintTop_toBottomOf="@+id/second_grid" />

    <tw.com.lixin.wm_casino.tools.grids.CasinoDoubleGrid
        android:id="@+id/fourth_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginTop="0.5dp"
        app:grid_x="11"
        app:grid_y="3"
        app:layout_constraintBottom_toBottomOf="@+id/third_grid"
        app:layout_constraintEnd_toEndOf="@+id/second_grid"
        app:layout_constraintStart_toEndOf="@+id/third_grid"
        app:layout_constraintTop_toBottomOf="@+id/second_grid" />


    <tw.com.lixin.wm_casino.tools.CardArea
        android:id="@+id/card_area"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/first_grid">

        <ImageView
            android:id="@+id/joker_card"
            android:layout_width="40dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/poker_h2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="小丑"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="@+id/joker_card"
            app:layout_constraintEnd_toStartOf="@+id/joker_card"
            app:layout_constraintTop_toTopOf="@+id/joker_card" />

        <ImageView
            android:id="@+id/anda_poker"
            android:layout_width="40dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/poker_d10" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="安達"
            android:textColor="#0000FF"
            app:layout_constraintBottom_toBottomOf="@+id/anda_poker"
            app:layout_constraintEnd_toStartOf="@+id/anda_poker"
            app:layout_constraintTop_toTopOf="@+id/anda_poker" />

        <ImageView
            android:id="@+id/baba_poker"
            android:layout_width="40dp"
            android:layout_height="54dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/poker_c11" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="巴哈"
            android:textColor="#FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/baba_poker"
            app:layout_constraintEnd_toStartOf="@+id/baba_poker"
            app:layout_constraintTop_toTopOf="@+id/baba_poker" />

    </tw.com.lixin.wm_casino.tools.CardArea>





</androidx.constraintlayout.widget.ConstraintLayout>