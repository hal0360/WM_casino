<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription,SpUsage"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_block"
        android:rotationX="53"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/table_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/player_pair"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dtOdds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9EB5AD"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/bet_value"
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/chip_value_border"
        android:gravity="center"
        android:text="20007"
        android:textSize="12dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <ImageView
        android:id="@+id/chip_check_img"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bet_value"
        app:layout_constraintEnd_toEndOf="@+id/bet_value"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/bet_value"
        app:layout_constraintTop_toTopOf="@+id/bet_value"
        app:srcCompat="@drawable/chip_check_off" />

    <ImageView
        android:id="@+id/coin1"
        android:layout_width="27dp"
        android:layout_height="18dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bet_value"
        app:layout_constraintEnd_toEndOf="@+id/bet_value"
        app:layout_constraintStart_toStartOf="@+id/bet_value"
        app:srcCompat="@drawable/chip5f" />


    <ImageView
        android:id="@+id/coin2"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/coin1"
        app:layout_constraintEnd_toEndOf="@+id/coin1"
        app:layout_constraintStart_toStartOf="@+id/coin1"
        app:srcCompat="@drawable/chip1f" />

    <ImageView
        android:id="@+id/coin3"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/coin2"
        app:layout_constraintEnd_toEndOf="@+id/coin2"
        app:layout_constraintStart_toStartOf="@+id/coin2"
        app:srcCompat="@drawable/chip5f" />

    <ImageView
        android:id="@+id/coin4"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/coin3"
        app:layout_constraintEnd_toEndOf="@+id/coin3"
        app:layout_constraintStart_toStartOf="@+id/coin3"
        app:srcCompat="@drawable/chip10f" />

    <ImageView
        android:id="@+id/coin5"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/coin4"
        app:layout_constraintEnd_toEndOf="@+id/coin4"
        app:layout_constraintStart_toStartOf="@+id/coin4"
        app:srcCompat="@drawable/chip10f" />


</merge>