<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="605dp"
    android:layout_height="338dp"
    android:background="@drawable/lobby_bg01"
    android:layout_gravity="center"
    android:layout_marginBottom="2dp"
    tools:ignore="ContentDescription,SpUsage"
    tools:context=".GameActivity">

    <tw.com.lixin.wm_casino.tools.ProfileSetting
        android:id="@+id/profile_setting"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <tw.com.lixin.wm_casino.tools.NewsBroadcast
        android:layout_width="190dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_setting" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout20"
        android:layout_width="45dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/back_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/table_list">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="14dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/back_to_lobby"
            android:textColor="#fff"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59000003" />

    </android.support.constraint.ConstraintLayout>

    <tw.com.atromoby.widgets.ItemsView
        android:id="@+id/table_list"
        android:layout_width="545dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="#66000000"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout20">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/white_ppls" />

        <TextView
            android:id="@+id/total_ppl_txt"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="#fff"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView22" />

    </android.support.constraint.ConstraintLayout>

    <tw.com.lixin.wm_casino.tools.MusicButton
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </tw.com.lixin.wm_casino.tools.MusicButton>

</android.support.constraint.ConstraintLayout>