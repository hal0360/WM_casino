<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/my_player"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="605dp"
    android:layout_height="338dp"
    android:layout_gravity="center"
    android:background="#006400"
    android:layout_marginBottom="2dp"
    tools:ignore="ContentDescription,SpUsage"
    tools:context=".BacActivity">

    <tw.com.lixin.wm_casino.tools.ProfileSetting
        android:id="@+id/profile_setting"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <tw.com.lixin.wm_casino.tools.NewsBroadcast
        android:id="@+id/newsBroadcast2"
        android:layout_width="190dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_setting" />

    <tw.com.lixin.wm_casino.tools.TableSwitchButton
        android:id="@+id/change_table_btn"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:background="@drawable/table_switch_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <tw.com.lixin.wm_casino.tools.ControlButton
        android:id="@+id/cancel_btn"
        android:layout_width="42dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/change_table_btn" />

    <tw.com.lixin.wm_casino.tools.ControlButton
        android:id="@+id/rebet_btn"
        android:layout_width="42dp"
        android:layout_height="0dp"
        app:control_type="rebet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_btn"
        app:layout_constraintTop_toTopOf="@+id/cancel_btn" />

    <tw.com.lixin.wm_casino.tools.ControlButton
        android:id="@+id/confirm_btn"
        android:layout_width="42dp"
        android:layout_height="0dp"
        app:control_type="confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rebet_btn"
        app:layout_constraintTop_toTopOf="@+id/rebet_btn" />

    <tw.com.lixin.wm_casino.tools.ChipSelection
        android:id="@+id/chipSelection2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsBroadcast2" />

    <tw.com.lixin.wm_casino.tools.RatePanel
        android:id="@+id/ratePanel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_setting" />

    <tw.com.lixin.wm_casino.tools.AskButton
        android:id="@+id/ask_bank_btn"
        android:layout_width="47dp"
        android:layout_height="25dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:ask_type="banker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/change_table_btn" />

    <tw.com.lixin.wm_casino.tools.AskButton
        android:id="@+id/ask_play_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ask_bank_btn"
        app:layout_constraintEnd_toEndOf="@+id/ask_bank_btn"
        app:layout_constraintStart_toStartOf="@+id/ask_bank_btn"
        app:layout_constraintTop_toTopOf="@+id/change_table_btn" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/first_grid"
        android:layout_width="153dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:grid_x="18"
        app:grid_y="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ask_play_btn"
        app:layout_constraintTop_toTopOf="@+id/ask_play_btn" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/main_grid"
        android:layout_width="113dp"
        android:layout_height="0dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginLeft="0.5dp"
        app:grid_x="13"
        app:grid_y="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/first_grid"
        app:layout_constraintTop_toTopOf="@+id/first_grid" />

    <View
        android:id="@+id/view10"
        android:layout_width="70dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_grid"
        app:layout_constraintStart_toEndOf="@+id/main_grid"
        app:layout_constraintTop_toTopOf="@+id/main_grid" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/second_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginLeft="0.5dp"
        app:grid_x="14"
        app:grid_y="3"
        app:layout_constraintBottom_toTopOf="@+id/view10"
        app:layout_constraintEnd_toStartOf="@+id/confirm_btn"
        app:layout_constraintStart_toEndOf="@+id/main_grid"
        app:layout_constraintTop_toTopOf="@+id/main_grid" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/third_grid"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:grid_x="7"
        app:grid_y="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/second_grid"
        app:layout_constraintTop_toBottomOf="@+id/view10" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/fourth_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginLeft="0.5dp"
        app:grid_x="7"
        app:grid_y="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/second_grid"
        app:layout_constraintStart_toEndOf="@+id/third_grid"
        app:layout_constraintTop_toTopOf="@+id/third_grid" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="510dp"
        android:layout_height="78dp"
        android:background="@drawable/bac_tables_pattern"
        app:layout_constraintBottom_toTopOf="@+id/main_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.694"
        app:layout_constraintStart_toStartOf="parent">

        <tw.com.lixin.wm_casino.tools.ChipStack
            android:id="@+id/player_pair_stack"
            android:layout_width="101dp"
            android:layout_height="57dp"
            android:rotationX="53"
            android:rotation="20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/player_pair"
            app:title_color="#9EB5AD" />

        <tw.com.lixin.wm_casino.tools.ChipStack
            android:id="@+id/player_stack"
            android:layout_width="89dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:rotation="10"
            android:rotationX="53"
            app:layout_constraintStart_toEndOf="@+id/player_pair_stack"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/player" />

        <tw.com.lixin.wm_casino.tools.ChipStack
            android:id="@+id/bank_pair_stack"
            android:layout_width="101dp"
            android:layout_height="57dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:rotationX="53"
            android:rotation="-20"
            app:title="@string/banker_pair"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <tw.com.lixin.wm_casino.tools.ChipStack
            android:id="@+id/bank_stack"
            android:layout_width="89dp"
            android:layout_height="47dp"
            android:layout_marginTop="15dp"
            android:rotationX="53"
            android:rotation="-10"
            app:title="@string/banker"
            app:layout_constraintEnd_toStartOf="@+id/bank_pair_stack"
            app:layout_constraintTop_toTopOf="parent" />

        <tw.com.lixin.wm_casino.tools.ChipStack
            android:id="@+id/tie_stack"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:rotationX="53"
            app:title="@string/tie"
            app:layout_constraintEnd_toStartOf="@+id/bank_stack"
            app:layout_constraintStart_toEndOf="@+id/player_stack"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <tw.com.lixin.wm_casino.tools.BacCardArea
        android:id="@+id/card_area"
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/chipSelection2"
        app:layout_constraintTop_toBottomOf="@+id/newsBroadcast2" />

</android.support.constraint.ConstraintLayout>