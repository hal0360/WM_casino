<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="605dp"
    android:layout_height="338dp"
    android:background="@drawable/lobby_bg01"
    android:layout_gravity="center"
    android:layout_marginBottom="2dp"
    tools:ignore="ContentDescription,SpUsage"
    tools:context=".BacActivity">

    <tw.com.lixin.wm_casino.tools.ProfileSetting
        android:id="@+id/profile_setting"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <tw.com.lixin.wm_casino.tools.NewsBroadcast
        android:id="@+id/newsBroadcast2"
        android:layout_width="190dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_setting" />


    <tw.com.lixin.wm_casino.tools.TableSwitchButton
        android:id="@+id/change_table_btn"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:background="@drawable/table_switch_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rebet_btn"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:background="@drawable/table_switch_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/repeat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/re_bet"
            android:textColor="#fff"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cancel_btn"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:background="@drawable/table_switch_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rebet_btn"
        app:layout_constraintTop_toTopOf="@+id/rebet_btn">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/confirm_btn"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:background="@drawable/table_switch_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_btn"
        app:layout_constraintTop_toTopOf="@+id/cancel_btn">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/confirm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/confirm"
            android:textColor="#fff"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/view10"
        android:layout_width="30dp"
        android:layout_height="0.1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/change_table_btn"
        app:layout_constraintTop_toTopOf="@+id/change_table_btn" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout27"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/blue_next"
        app:layout_constraintBottom_toTopOf="@+id/view10"
        app:layout_constraintStart_toStartOf="@+id/view10"
        app:layout_constraintTop_toTopOf="@+id/change_table_btn">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_p"
            android:textColor="#fff"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/next_blue_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/play_third_sym"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bank_i" />

            <ImageView
                android:id="@+id/play_second_sym"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/play_third_sym"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bank_1" />

            <ImageView
                android:id="@+id/play_fourth_sym"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/play_third_sym"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bank_s" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/red_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout27"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout27"
        app:layout_constraintTop_toBottomOf="@+id/view10">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_b"
            android:textColor="#fff"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/next_blue_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/bank_third_sym"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bank_i" />

            <ImageView
                android:id="@+id/bank_second_sym"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bank_third_sym"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bank_1" />

            <ImageView
                android:id="@+id/bank_fourth_sym"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bank_third_sym"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bank_s" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/casinoGrid"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:grid_x="17"
        app:grid_y="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout27"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout27" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/casinoGrid2"
        android:layout_width="111dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:grid_x="13"
        app:grid_y="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/casinoGrid"
        app:layout_constraintTop_toTopOf="@+id/casinoGrid" />

    <View
        android:id="@+id/view12"
        android:layout_width="56dp"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/casinoGrid2"
        app:layout_constraintEnd_toStartOf="@+id/confirm_btn"
        app:layout_constraintStart_toEndOf="@+id/casinoGrid2"
        app:layout_constraintTop_toTopOf="@+id/casinoGrid2" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:id="@+id/casinoGrid5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:grid_x="12"
        app:grid_y="3"
        app:layout_constraintBottom_toTopOf="@+id/view12"
        app:layout_constraintEnd_toStartOf="@+id/confirm_btn"
        app:layout_constraintStart_toEndOf="@+id/casinoGrid2"
        app:layout_constraintTop_toTopOf="@+id/casinoGrid2" />

    <View
        android:id="@+id/view13"
        android:layout_width="0.5dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/casinoGrid5"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/casinoGrid5" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:grid_x="6"
        app:grid_y="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view13"
        app:layout_constraintStart_toEndOf="@+id/casinoGrid2"
        app:layout_constraintTop_toBottomOf="@+id/view12" />

    <tw.com.lixin.wm_casino.tools.CasinoGrid
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:grid_x="6"
        app:grid_y="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/confirm_btn"
        app:layout_constraintStart_toEndOf="@+id/view13"
        app:layout_constraintTop_toBottomOf="@+id/view12" />

    <tw.com.lixin.wm_casino.tools.ChipSelection
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsBroadcast2" />

    <tw.com.lixin.wm_casino.tools.RatePanel
        android:id="@+id/ratePanel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_setting" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="491dp"
        android:layout_height="84dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/bac_tables_pattern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:rotation="20"
            android:rotationX="55"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="@string/player_pair"
                android:textColor="#fff"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="11:1.09"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>