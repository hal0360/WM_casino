<resources>

    <attr name="title" format="string" />

    <declare-styleable name="CasinoGrid">
        <attr name="grid_y" format="integer" />
        <attr name="grid_x" format="integer" />
        <attr name="grid_double" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProfileBar">
        <attr name="title" />
        <attr name="show_balance" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ChipStack">
        <attr name="title_color" format="color" />
        <attr name="title" />
        <attr name="tilt" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomChip">
        <attr name="number_size" format="integer" />
    </declare-styleable>

    <declare-styleable name="AskButton">
        <attr name="ask_type" format="enum">
            <enum name="player" value="1"/>
            <enum name="banker" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TableSwitchSelect">
        <attr name="game_name" format="string"/>
        <attr name="game_image" format="reference" />
    </declare-styleable>

    <declare-styleable name="ControlButton">
        <attr name="control_type" format="enum">
            <enum name="rebet" value="1"/>
            <enum name="confirm" value="2"/>
            <enum name="cancel" value="3"/>
        </attr>
    </declare-styleable>

</resources>
