<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,SpUsage"
    android:orientation="vertical" android:layout_width="360dp"
    android:background="#191919"
    android:layout_height="340dp">

    <tw.com.atromoby.rtmplayer.IjkVideoView
        android:id="@+id/live_video"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/live1_btn"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="@drawable/live_button_border"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/live2_btn"
        app:layout_constraintEnd_toStartOf="@+id/live2_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/live2_btn" />

    <TextView
        android:id="@+id/live2_btn"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/live_button_border"
        android:gravity="center"
        android:text="2"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_video" />

    <TextView
        android:id="@+id/live3_btn"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="@drawable/live_button_border"
        android:gravity="center"
        android:text="3"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/live2_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/live2_btn"
        app:layout_constraintTop_toTopOf="@+id/live2_btn" />

    <TextView
        android:id="@+id/live5_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/live_button_border"
        android:gravity="center"
        android:text="5"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/live2_btn"
        app:layout_constraintStart_toStartOf="@+id/live2_btn"
        app:layout_constraintTop_toBottomOf="@+id/live2_btn" />

    <TextView
        android:id="@+id/live6_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/live_button_border"
        android:gravity="center"
        android:text="6"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/live5_btn"
        app:layout_constraintEnd_toEndOf="@+id/live3_btn"
        app:layout_constraintStart_toStartOf="@+id/live3_btn"
        app:layout_constraintTop_toTopOf="@+id/live5_btn" />

    <TextView
        android:id="@+id/live4_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/live_button_border"
        android:gravity="center"
        android:text="4"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/live5_btn"
        app:layout_constraintEnd_toEndOf="@+id/live1_btn"
        app:layout_constraintStart_toStartOf="@+id/live1_btn"
        app:layout_constraintTop_toTopOf="@+id/live5_btn" />

    <TextView
        android:id="@+id/close_btn"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@+id/live_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>