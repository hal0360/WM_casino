<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:ignore="ContentDescription,SpUsage"
    tools:context=".BaccaratActivity">


    <tw.com.lixin.wm_casino.tools.gameComponents.ProfileBar
        android:id="@+id/profileBar2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video"
        android:layout_width="360dp"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileBar2">

        <tw.com.lixin.wm_casino.tools.gameComponents.RatePanel
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:background="#34754D"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/video"
        app:layout_constraintStart_toStartOf="@+id/video"
        app:layout_constraintTop_toBottomOf="@+id/video">

        <tw.com.lixin.wm_casino.tools.gameComponents.ChipStack
            android:id="@+id/player_pair_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title="@string/player_pair"
            app:title_color="#0000FF" />

        <tw.com.lixin.wm_casino.tools.gameComponents.ChipStack
            android:id="@+id/player_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title="@string/player"
            app:title_color="#0000FF" >

            <TextView
                android:id="@+id/play_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textColor="#0000FF"
                android:textSize="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </tw.com.lixin.wm_casino.tools.gameComponents.ChipStack>

        <tw.com.lixin.wm_casino.tools.gameComponents.ChipStack
            android:id="@+id/tie_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title="@string/tie"
            app:title_color="#7CFC00" />

        <tw.com.lixin.wm_casino.tools.gameComponents.ChipStack
            android:id="@+id/bank_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title="@string/banker"
            app:title_color="#FF0000" >

            <TextView
                android:id="@+id/bank_score"
                android:text="0"
                android:textColor="#FF0000"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </tw.com.lixin.wm_casino.tools.gameComponents.ChipStack>

        <tw.com.lixin.wm_casino.tools.gameComponents.ChipStack
            android:id="@+id/bank_pair_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:title="@string/banker_pair"
            app:title_color="#FF0000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>