<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:background="#2E5590"
    tools:ignore="ContentDescription"
    android:layout_height="360dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#222222"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/emo_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emo1" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/emo_1"
                app:layout_constraintTop_toTopOf="@+id/emo_1"
                app:srcCompat="@drawable/emo2" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/clickImage"
                app:layout_constraintTop_toTopOf="@+id/clickImage"
                app:srcCompat="@drawable/emo3" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/clickImage2"
                app:layout_constraintTop_toTopOf="@+id/clickImage2"
                app:srcCompat="@drawable/emo4" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="@+id/emo_1"
                app:layout_constraintTop_toBottomOf="@+id/emo_1"
                app:srcCompat="@drawable/emo5" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/clickImage4"
                app:layout_constraintTop_toTopOf="@+id/clickImage4"
                app:srcCompat="@drawable/emo6" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/clickImage5"
                app:layout_constraintTop_toTopOf="@+id/clickImage5"
                app:srcCompat="@drawable/emo7" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/clickImage6"
                app:layout_constraintTop_toTopOf="@+id/clickImage6"
                app:srcCompat="@drawable/emo8" />

            <tw.com.lixin.wm_casino.tools.buttons.ClickImage
                android:id="@+id/clickImage8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="@+id/clickImage4"
                app:layout_constraintTop_toBottomOf="@+id/clickImage4"
                app:srcCompat="@drawable/emo9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <tw.com.lixin.wm_casino.tools.buttons.ClickImage
        android:id="@+id/smile_btn"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/message_butt_border"
        android:padding="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smile" />

    <tw.com.lixin.wm_casino.tools.buttons.ClickImage
        android:id="@+id/speaker_btn"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="50dp"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loud" />

</androidx.constraintlayout.widget.ConstraintLayout>